{
  "name": "bloomlead-webinar-platform",
  "version": "2.0.0",
  "description": "Modern webinar platform with professional learning features",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --config config/webpack.dev.js",
    "dev:mock": "cross-env NODE_ENV=development MOCK_API=true webpack serve --config config/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.prod.js",
    "build:dev": "cross-env NODE_ENV=development webpack --config config/webpack.dev.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,css,html}",
    "analyze": "webpack-bundle-analyzer build/static/js/*.js",
    "serve": "http-server build -p 8080",
    "serve:proxy": "cross-env API_URL=http://localhost:8000 npm run dev",
    "clean": "rm -rf build dist",
    "prepare": "husky install",
    "proxy:test": "cross-env API_URL=http://httpbin.org npm run dev"
  },
  "keywords": [
    "webinar",
    "education",
    "professional-learning",
    "bloomlead",
    "javascript",
    "modern-frontend"
  ],
  "author": "BloomLead Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "html-webpack-plugin": "^5.5.3",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "core-js": "^3.32.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "lint-staged": {
    "src/**/*.{js,css,html}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/src/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/vendor/**"
    ]
  }
}