              },
              "actionsTracked": {
                "type": "array",
                "contains": ["video_view", "form_submission", "page_view"],
                "personalData": false
              },
              "visitTimestamp": {
                "type": "timestamp",
                "format": "unix_milliseconds",
                "personalData": false
              }
            },
            "duration": "30_days"
          }
        }
