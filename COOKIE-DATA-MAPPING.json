{
  "cookieDataMapping": {
    "version": "1.0.0",
    "lastUpdated": "2024-12-12",
    "website": "BloomLead Webinar Platform",
    "domain": "bloomlead.io",
    
    "cookieCategories": {
      "necessary": {
        "consentRequired": false,
        "legalBasis": "legitimate_interest",
        "description": "Essential for website functionality",
        "cookies": {
          "webinar_session": {
            "purpose": "Session management",
            "dataCollected": {
              "sessionId": {
                "type": "string",
                "format": "sess_[32_char_random]",
                "example": "sess_Kj8mN2pQ9rT5vX7zA3bC1dE6fG8hI0jK",
                "personalData": false
              },
              "creationTime": {
                "type": "timestamp",
                "format": "unix_timestamp",
                "example": 1639123456789,
                "personalData": false
              }
            },
            "duration": "session",
            "security": {
              "httpOnly": false,
              "secure": true,
              "sameSite": "Strict"
            }
          },
          
          "x-csrf-token": {
            "purpose": "CSRF protection",
            "dataCollected": {
              "token": {
                "type": "string",
                "format": "base64_encoded_random",
                "example": "dGltZXN0YW1wLjEyMzQ1Njc4OTA",
                "personalData": false
              }
            },
            "duration": "24_hours",
            "security": {
              "httpOnly": false,
              "secure": true,
              "sameSite": "Strict"
            }
          },
          
          "cookie_consent_status": {
            "purpose": "Remember consent choice",
            "dataCollected": {
              "status": {
                "type": "enum",
                "values": ["pending", "accepted", "rejected", "partial"],
                "example": "accepted",
                "personalData": false
              }
            },
            "duration": "365_days",
            "security": {
              "httpOnly": false,
              "secure": true,
              "sameSite": "Lax"
            }
          }
        }
      },
      
      "functional": {
        "consentRequired": true,
        "legalBasis": "consent",
        "description": "Enhance user experience with preferences",
        "cookies": {
          "video_progress_{videoId}": {
            "purpose": "Resume video playback",
            "dataCollected": {
              "currentTime": {
                "type": "float",
                "unit": "seconds",
                "range": "0-7200",
                "example": 127.5,
                "personalData": false
              },
              "videoId": {
                "type": "string",
                "format": "module-{number}-{name}",
                "example": "module-1-webinar",
                "personalData": false
              }
            },
            "duration": "30_days",
            "security": {
              "httpOnly": false,
              "secure": true,
              "sameSite": "Lax"
            }
          },
          
          "video_volume": {
            "purpose": "Remember volume preference",
            "dataCollected": {
              "volume": {
                "type": "float",
                "range": "0.0-1.0",
                "example": 0.8,
                "personalData": false
              }
            },
            "duration": "365_days"
          },
          
          "video_quality": {
            "purpose": "Remember quality preference",
            "dataCollected": {
              "quality": {
                "type": "enum",
                "values": ["auto", "480p", "720p", "1080p"],
                "example": "720p",
                "personalData": false
              }
            },
            "duration": "365_days"
          },
          
          "playback_speed": {
            "purpose": "Remember playback speed",
            "dataCollected": {
              "speed": {
                "type": "float",
                "values": [0.5, 0.75, 1.0, 1.25, 1.5, 2.0],
                "example": 1.25,
                "personalData": false
              }
            },
            "duration": "365_days"
          },
          
          "subtitles_enabled": {
            "purpose": "Remember subtitle preference",
            "dataCollected": {
              "enabled": {
                "type": "boolean",
                "example": true,
                "personalData": false
              }
            },
            "duration": "365_days"
          },
          
          "last_webinar": {
            "purpose": "Continue watching feature",
            "dataCollected": {
              "webinarId": {
                "type": "string",
                "format": "module-{number}-{name}",
                "example": "module-1-webinar",
                "personalData": false
              }
            },
            "duration": "30_days"
          },
          
          "language": {
            "purpose": "Remember language preference",
            "dataCollected": {
              "languageCode": {
                "type": "string",
                "format": "ISO_639-1",
                "values": ["en", "fi", "sv", "de", "fr"],
                "example": "fi",
                "personalData": false
              }
            },
            "duration": "365_days"
          },
          
          "ui_theme": {
            "purpose": "Remember theme preference",
            "dataCollected": {
              "theme": {
                "type": "enum",
                "values": ["light", "dark"],
                "example": "dark",
                "personalData": false
              }
            },
            "duration": "365_days"
          },
          
          "ui_font_size": {
            "purpose": "Remember font size preference",
            "dataCollected": {
              "fontSize": {
                "type": "string",
                "format": "{number}px",
                "values": ["14px", "16px", "18px", "20px"],
                "example": "18px",
                "personalData": false
              }
            },
            "duration": "365_days"
          }
        }
      },
      
      "analytics": {
        "consentRequired": true,
        "legalBasis": "consent",
        "description": "Website usage analytics and improvements",
        "cookies": {
          "_ga": {
            "purpose": "Google Analytics user identification",
            "thirdParty": "Google",
            "dataCollected": {
              "clientId": {
                "type": "string",
                "format": "GA{version}.{domain_hash}.{random}.{timestamp}",
                "example": "GA1.2.1234567890.1639123456",
                "personalData": false
              }
            },
            "duration": "2_years"
          },
          
          "_ga_*": {
            "purpose": "Google Analytics 4 property data",
            "thirdParty": "Google",
            "dataCollected": {
              "sessionData": {
                "type": "object",
                "contains": ["session_id", "engagement_time", "page_views"],
                "personalData": false
              }
            },
            "duration": "2_years"
          },
          
          "_gid": {
            "purpose": "Google Analytics session identification",
            "thirdParty": "Google",
            "dataCollected": {
              "sessionId": {
                "type": "string",
                "format": "random_identifier",
                "personalData": false
              }
            },
            "duration": "24_hours"
          }
        },
        
        "customAnalytics": {
          "videoEngagement": {
            "purpose": "Track video viewing patterns",
            "storage": "temporary_transmission",
            "dataCollected": {
              "videoId": {
                "type": "string",
                "example": "module-1-webinar",
                "personalData": false
              },
              "action": {
                "type": "enum",
                "values": ["play", "pause", "milestone", "completed", "quality_change"],
                "example": "milestone"
              },
              "currentTime": {
                "type": "float",
                "unit": "seconds",
                "example": 127.5
              },
              "milestone": {
                "type": "integer",
                "values": [25, 50, 75, 100],
                "example": 50
              },
              "sessionId": {
                "type": "string",
                "format": "session_{timestamp}_{random}",
                "personalData": false
              },
              "timestamp": {
                "type": "timestamp",
                "format": "unix_milliseconds",
                "example": 1639123456789
              }
            }
          },
          
          "userJourney": {
            "purpose": "Understand user behavior patterns",
            "storage": "temporary_transmission",
            "dataCollected": {
              "action": {
                "type": "enum",
                "values": ["page_view", "scroll_milestone", "button_click", "form_focus", "time_on_page"],
                "example": "button_click"
              },
              "page": {
                "type": "string",
                "format": "path",
                "example": "/courses-details.html"
              },
              "buttonText": {
                "type": "string",
                "example": "Accept All",
                "personalData": false
              },
              "scrollDepth": {
                "type": "integer",
                "unit": "percentage",
                "range": "0-100",
                "example": 75
              },
              "timeOnPage": {
                "type": "integer",
                "unit": "milliseconds",
                "example": 45000
              },
              "deviceInfo": {
                "type": "object",
                "contains": {
                  "screenResolution": {
                    "type": "string",
                    "format": "{width}x{height}",
                    "example": "1920x1080"
                  },
                  "viewportSize": {
                    "type": "string",
                    "format": "{width}x{height}",
                    "example": "1200x800"
                  },
                  "userAgent": {
                    "type": "string",
                    "note": "Hashed for privacy",
                    "personalData": false
                  }
                }
              }
            }
          }
        }
      },
      
      "marketing": {
        "consentRequired": true,
        "legalBasis": "consent",
