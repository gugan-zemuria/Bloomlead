              }
            },
            "duration": "90_days"
          },
          
          "_fbc": {
            "purpose": "Facebook click identifier",
            "thirdParty": "Facebook/Meta",
            "dataCollected": {
              "clickId": {
                "type": "string",
                "format": "fb_click_id",
                "personalData": false
              }
            },
            "duration": "90_days"
          },
          
          "linkedin_oauth": {
            "purpose": "LinkedIn conversion tracking",
            "thirdParty": "LinkedIn",
            "dataCollected": {
              "memberId": {
                "type": "string",
                "format": "hashed_member_id",
                "personalData": false
              }
